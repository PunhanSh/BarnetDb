@model VmBlog

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <a class="btn btn-primary mb-3" asp-area="Admin" asp-controller="Blog" asp-action="Create">Create</a>
        </div>
        <div class="col-lg-12">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">SubTitle</th>
                        <th scope="col">Title</th>
                        <th scope="col">Content</th>
                        <th scope="col">CreatedDate</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @{int i = 0;
                        foreach (var item in Model.Blogs)
                        {
                            i++;
                                        <tr>
                                            <th scope="row">@i</th>
                                            <td>@item.Name</td>
                                            <td>@item.SubTitle</td>
                                            <td>@item.Title</td>
                                            <td>@item.Content</td>
                                            <td>@item.CreatedDate</td>
                                            <td>
                                                <a class="btn btn-success" asp-area="Admin" asp-controller="Blog" asp-action="Update" asp-route-id="@item.Id">Update</a>
                                                <a class="btn btn-danger" asp-area="Admin" asp-controller="Blog" asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure?')">Delete</a>
                                            </td>
                                        </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


