@model Blog
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <form asp-area="Admin" asp-controller="Blog" asp-action="Update" method="post">
                <div class="form-group">
                    <label asp-for="@Model.Name">Name</label>
                    <input class="form-control" asp-for="@Model.Name">
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.SubTitle">SubTitle</label>
                    <input class="form-control" asp-for="@Model.SubTitle">
                    <span asp-validation-for="@Model.SubTitle" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="@Model.Title">Title</label>
                    <input class="form-control" asp-for="@Model.Title">
                    <span asp-validation-for="@Model.Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Content">Content</label>
                    <input class="form-control" asp-for="@Model.Content">
                    <span asp-validation-for="@Model.Content" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.CreatedDate">CreatedDate</label>
                    <input class="form-control" asp-for="@Model.CreatedDate">
                    <span asp-validation-for="@Model.CreatedDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.BlogCategoryId">BlogCategoryId</label>
                    <input class="form-control" asp-for="@Model.BlogCategoryId">
                    <span asp-validation-for="@Model.BlogCategoryId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.UserId">UserId</label>
                    <input class="form-control" asp-for="@Model.UserId">
                    <span asp-validation-for="@Model.UserId" class="text-danger"></span>
                    <input class="form-control" type="hidden" asp-for="@Model.Id">
                </div>

                <button type="submit" class="btn btn-success">Update</button>
                <button type="submit" class="btn btn-dark" asp-controller="Blog" asp-action="Index">Back to List</button>

            </form>
        </div>
    </div>
</div>

