@model VmService
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <a class="btn btn-primary mb-3" asp-area="Admin" asp-controller="Work" asp-action="Create">Create</a>
        </div>
        <div class="col-lg-12">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Image</th>
                        <th scope="col">SupTitle</th>
                        <th scope="col">Name</th>
                        <th scope="col">Title</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @{int i = 0;
                        foreach (var item in Model.Works)
                        {
                            i++;
                                        <tr>
                                            <th scope="row">@i</th>
                                            <td><img src="~/Uploads/@item.Image" style="width: 100px" alt="Alternate Text" /></td>
                                            <td>@item.SupTitle</td>
                                            <td>@item.Name</td>
                                            <td>@item.Title</td>
                                            <td>
                                                <a class="btn btn-success" asp-area="Admin" asp-controller="Work" asp-action="Update" asp-route-id="@item.Id">Update</a>
                                                <a class="btn btn-danger" asp-area="Admin" asp-controller="Work" asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure?')">Delete</a>
                                            </td>
                                        </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>